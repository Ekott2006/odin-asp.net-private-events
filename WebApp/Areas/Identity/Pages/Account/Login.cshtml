@page
@model WebApp.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-sm-12   col-md-6">
        <section>
            <form id="account" method="post">
                <h2>Use a local account to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="LoginRequest.Username" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="LoginRequest.Username" class="form-label">Username</label>
                    <span asp-validation-for="LoginRequest.Username" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="LoginRequest.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="LoginRequest.Password" class="form-label">Password</label>
                    <span asp-validation-for="LoginRequest.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="LoginRequest.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="LoginRequest.RememberMe" />
                        @Html.DisplayNameFor(m => m.LoginRequest.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="text-decoration: none">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
